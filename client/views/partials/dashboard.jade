.col-md-12
    alert(ng-repeat="alert in alerts", type="{{alert.type}}", close="closeAlert($index)") {{alert.msg}}
    select(ng-repeat="application in applicationList.node.nodes" ng-model="selectedApplication" ng-change="getTogglesForApplication()").form-control
      option {{application.key}}
    .panel.panel-default
        .panel-heading
          h3.panel-title All Feature Toggles
        .panel-body
          table.table
            trhead
              tr
                th Name
                th State
            trbody
              tr(ng-repeat="toggle in featureToggles.node.nodes" ng-animate=" 'animate' ")
                td {{toggle.key}}
                td 
                  toggle-switch(model="toggle.value").switch-primary

