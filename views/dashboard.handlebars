
<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Active Toggles</h3>
    </div>
    <div class="panel-body">
      
    </div>
    
    <table class="table table-hover">
        <trhead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>.co.uk</th>
                <th>.com</th>
                <th>.de</th>
                <th>.com.mx</th>
                <th>.jp</th>
                <th>Actions</th>
            </tr>
        </trhead>
        <tbody>
            {{#featuretoggles}}
                <tr>
                    <td>{{Name}}</td>
                    <td>
                      <p>
                        {{Description}}
                      </p>
                      <div>
                        {{#each Tags}}
                          <span class="label label-primary">{{this}}</span>
                        {{/each}}
                      </div>
                    </td>
                    {{#DomainConfiguration}}
                      <td class="toggle-cell">
                          <input type='checkbox' name='op1' id='toggle' value='1' class='toggleswitch disabled' {{toggleslider FeaturedEnabled}} />
                      </td>
                    {{/DomainConfiguration}}
                    <td>
                      <a href="/feature/{{_id}}" class="btn" id="edit-toggle" data-toggle="modal" data-target="#editModal">edit</a>
                    </td>
                </tr>
            {{/featuretoggles}}
        </tbody>
      </table>
  </div>
</div>

<!-- Edit Toggle Modal - should probably move to a partial -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit</h4>
      </div>
      <div class="modal-body">
        Something is wrong. I can't fetch the feature toggle you selected!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

