<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">Edit - <span>{{{featuretoggle.Name}}}</span></h4>
</div>
<div class="modal-body">
  <form class="form-horizontal" role="form">    
    {{#featuretoggle.DomainConfiguration}}
      <div class="form-group">
        <label for="{{DomainName.DomainName}}" class="col-sm-2 control-label">{{DomainName.DomainName}}</label>
        <div class="col-sm-10 toggle-container">
          <input type="checkbox" id="toggle" value='1' class='{{DomainName.DomainName}} form-control toggleswitch' {{toggleslider FeaturedEnabled}} />
        </div>
      </div>
    {{/featuretoggle.DomainConfiguration}}
  </form>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <button type="button" class="btn btn-primary">Save changes</button>
</div>

<script type="application/javascript">
  toggleSwitch();
</script>