<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">Edit - <span>{{{featuretoggle.Name}}}</span></h4>
</div>
<form id="edit-toggle-form" class="form-horizontal" role="form" method="post" action="/feature/edit">  
  <div class="modal-body"> 
    {{#featuretoggle.DomainConfiguration}}
      <div class="form-group">
        <label for="{{DomainName.DomainName}}" class="col-sm-2 control-label">{{DomainName.DomainName}}</label>
        <div class="col-sm-10 toggle-container">
          <input type="checkbox" id="toggle" name={{DomainName.DomainName}} value='1' class='{{DomainName.DomainName}} form-control toggleswitch' {{toggleslider FeaturedEnabled}} />
        </div>
      </div>
    {{/featuretoggle.DomainConfiguration}}
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" id="edit-toggle" class="btn btn-primary">Save changes</button>
  </div>
</form>

<script type="application/javascript">
  toggleSwitch();
</script>